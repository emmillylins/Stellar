{
    "start_url": "./index.html",
    "manifest_version": 3,
    "name": "Reading Time",
    "description": "Add the reading time to Chrome Extension documentation articles",
    "version": "1.0",
    "icons": {
      "16": "images/a.png",
      "32": "images/a.png",
      "48": "images/a.png",
      "128": "images/a.png"
    },
    "content_scripts": [
      {
        "js": [
          "scripts/content.js"
        ],
        "matches": [
          "https://developer.chrome.com/docs/extensions/*",
          "https://developer.chrome.com/docs/webstore/*"
        ]
      }
    ]
  }